<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KostenkoLaba3.Views.AdvancedSearchPage"
             BackgroundColor="#2d2d25">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Advanced House Search" FontSize="Large" HorizontalOptions="Center" TextColor="White" />

        <Label Text="Location" TextColor="White" />
        <Entry x:Name="LocationEntry"  BackgroundColor="#3e3e3e" TextColor="White" />

        <Label Text="Minimum Price" TextColor="White" />
        <Entry x:Name="MinPriceEntry"  Keyboard="Numeric" BackgroundColor="#3e3e3e" TextColor="White" />

        <Label Text="Maximum Price" TextColor="White" />
        <Entry x:Name="MaxPriceEntry" Keyboard="Numeric" BackgroundColor="#3e3e3e" TextColor="White" />

        <Label Text="Minimum Number of Rooms" TextColor="White" />
        <Entry x:Name="MinRoomsEntry" Keyboard="Numeric" BackgroundColor="#3e3e3e" TextColor="White" />

        <Button Text="Search" Clicked="OnSearchClicked" BackgroundColor="#3498db" TextColor="White" />
    </StackLayout>
</ContentPage>
